{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Local Server",
            "type": "shell",
            "windows": {
                "command": ".\\venv\\Scripts\\Activate.ps1; python manage.py runserver"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "Make Database Migrations",
            "type": "shell",
            "windows": {
                "command": ".\\venv\\Scripts\\Activate.ps1; python manage.py makemigrations"
            },
            "group": "build"
        },
        {
            "label": "Run Database Migrations",
            "type": "shell",
            "windows": {
                "command": ".\\venv\\Scripts\\Activate.ps1; python manage.py migrate"
            },
            "group": "build"
        },
        {
            "label": "Open Admin Panel",
            "type": "shell",
            "windows": {
                "command": "start \"\" http://localhost:8000/admin"
            }
        },
        {
            "label": "Run Live Reload Server",
            "type": "shell",
            "windows": {
                "command": ".\\venv\\Scripts\\Activate.ps1; python manage.py livereload"
            }
        },
        {
            "label": "Run TSC Watchdog",
            "type": "shell",
            "command": "tsc --watch",
            "problemMatcher": []
        },
        {
            "label": "Quick-start: Develop",
            "type": "shell",
            "dependsOn": [
                "Run Live Reload Server",
                "Run Local Server",
                "Run TSC Watchdog"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": []
        }
    ]
}